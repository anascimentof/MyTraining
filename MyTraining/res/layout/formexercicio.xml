<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <br.com.training.components.ConsistenciaMSG
        android:id="@+formexercicio/consistenciaMSG1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+formexercicio/txtDescricao"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Descrição do Exercício" android:textColor="@color/AMARELO"/>

    <EditText
        android:id="@+formexercicio/edtDescricao"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="text" android:lines="1" android:maxLines="1" android:maxLength="50">
    </EditText>

    <TextView
        android:id="@+formexercicio/txtGrupoExercicio"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Selecione um ou mais Grupos de Exercício" android:textColor="@color/AMARELO" android:gravity="center_horizontal"/>

  <LinearLayout android:id="@+id/linearLayout2" android:layout_width="match_parent" android:layout_height="289dp">
      <ListView android:layout_height="wrap_content" android:id="@+formexercicio/lista" android:layout_width="fill_parent"></ListView>
  </LinearLayout>
  <LinearLayout android:id="@+id/linearLayout1" android:layout_width="match_parent" android:layout_height="match_parent">
      <ImageButton android:layout_height="wrap_content" android:src="@drawable/salvar" android:layout_gravity="bottom" android:layout_weight="1" android:layout_width="0dp" android:id="@+formexercicio/btmsalvar"></ImageButton>
      <ImageButton android:layout_height="wrap_content" android:src="@drawable/cancelar" android:layout_gravity="bottom" android:layout_weight="1" android:layout_width="0dp" android:id="@+formexercicio/btnvoltar"></ImageButton>
  </LinearLayout>

</LinearLayout>